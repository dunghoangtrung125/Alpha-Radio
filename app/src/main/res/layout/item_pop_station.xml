<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_margin="@dimen/dimen_8"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_station_favicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_16"
        app:cardElevation="@dimen/dimen_8"
        app:strokeColor="#FFF3E0"
        app:strokeWidth="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pop_station_favicon"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="80dp" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/text_pop_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:gravity="center"
        android:text="Radio Name"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/card_station_favicon" />

</androidx.constraintlayout.widget.ConstraintLayout>