<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_radio_station"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="@dimen/dimen_16"
    app:cardElevation="@dimen/dimen_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_card_radio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_favicon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/dimen_8"
            app:layout_constraintBottom_toBottomOf="@id/constraint_card_radio"
            app:layout_constraintStart_toStartOf="@id/constraint_card_radio"
            app:layout_constraintTop_toTopOf="@id/constraint_card_radio" />

        <TextView
            android:id="@+id/text_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_32"
            android:text="VOV1"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/image_favicon"
            app:layout_constraintTop_toTopOf="@+id/image_favicon" />

        <TextView
            android:id="@+id/text_station_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hanoi"
            app:layout_constraintStart_toStartOf="@+id/text_station_name"
            app:layout_constraintTop_toBottomOf="@+id/text_station_name" />

        <TextView
            android:id="@+id/text_station_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:text="Vietnam"
            app:layout_constraintStart_toEndOf="@+id/text_station_state"
            app:layout_constraintTop_toBottomOf="@+id/text_station_name" />

        <TextView
            android:id="@+id/text_station_bitrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="128kbps"
            app:layout_constraintBottom_toBottomOf="@+id/image_favicon"
            app:layout_constraintStart_toStartOf="@+id/text_station_name"
            app:layout_constraintTop_toBottomOf="@+id/text_station_state" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>